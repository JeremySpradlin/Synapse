{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/1.x/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Synapse",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "window": {
        "create": true,
        "hide": true,
        "show": true,
        "startDragging": true,
        "unminimize": true,
        "minimize": true,
        "close": true,
        "maximize": true,
        "unmaximize": true,
        "setDecorations": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setPosition": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.synapse.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "width": 1200,
        "resizable": true,
        "title": "Synapse",
        "decorations": false,
        "transparent": true,
        "visible": false
      },
      {
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "url": "settings.html",
        "title": "Synapse Settings",
        "visible": false,
        "label": "settings"
      }
    ]
  }
}